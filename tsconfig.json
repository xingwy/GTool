{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "sourceMap": true,
        "outDir" : "./build",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "esModuleInterop": false,
    },
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/*",
        "src/**/*",
        "src/index.ts", "src/index.d.ts.ts",
    ]
}